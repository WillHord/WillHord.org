---
import Gallery from "$lib/components/gallery/gallery.svelte";
import Particles from "$lib/components/ui/particles.svelte";
import { projectData } from "$lib/projectData";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="fixed inset-0 h-screen -z-100">
    <Particles
      client:load
      className="absolute inset-0 -z-90 "
      quantity={1000}
      ease={80}
      color={"#ffffff"}
      refresh
    />
  </div>
  <div class="xl:mx-36 lg:mx-28 md:mx-22 sm:mx-10 my-12">
    <div class="my-8">
      <h1 class="text-4xl text-center">Projects</h1>

      <!-- <Separator /> -->
    </div>
    <div class="py-8">
      <Gallery client:only projects={projectData} />
    </div>
  </div>
</Layout>

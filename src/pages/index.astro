---
import {cn} from "$lib/utils"
import Button from "$lib/components/ui/button/button.svelte";
import Layout from "../layouts/Layout.astro";
import ProjectMarquee from "$lib/components/ProjectMarquee.svelte";

import HeroWrapper from "$lib/components/Hero/HeroWrapper.svelte";
import Terminal from "src/components/terminal.astro";

import { headerImages } from "$lib/headerImages";
---

<Layout>
  <main class="flex flex-1 flex-col">
  <!-- <div class="h-screen sticky top-0 left-0 w-full"> -->
  <!-- </div> -->
  <HeroWrapper client:load/>
  <!-- <div class="min-h-[80vh] w-full z-0 absolute top-0 right-0 pointer-events-none"> -->
  <!--   <div class="flex justify-center items-center h-[80vh] pointer-events-none"> -->
  <!--     <h1 -->
  <!--       class={`text-white text-9xl pl-24 tracking-in-expand`} -->
  <!--     > -->
  <!--       Will Hord -->
  <!--     </h1> -->
  <!--   </div> -->
  <!-- </div> -->

  <div class="backdrop-filter backdrop-blur-sm">
    <section class="w-full min-h-[40vh] py-24 px-6 lg:px-0">
      <Terminal />
    </section>
    <section class="w-full min-h-[80vh] bg-white m-auto py-[10%] bg-opacity-90 flex justify-center items-center">
      <div class="h-[80vh] relative w-11/12">
        <picture>
          <!-- TODO: use tailwind lg or xl size -->
          <source
            srcset={headerImages.HomePageImage1}
            media="(min-width: 768px)"
          />
          <img
            src={headerImages.HomePageImage1Mobile}
            alt="image"
            class="object-cover w-full h-full relative m-auto"
          />
        </picture>
      </div>
    </section>

    <section class="w-full min-h-[80vh] text-center flex items-center justify-center">
      <div class="w-full inline-block text-center m-auto">
        <h2 class="text-white text-3xl mt-10 pb-4">Recent Projects</h2>
        <div class="flex flex-col justify-center items-center gap-10 select-none">
          <ProjectMarquee />
        </div>
          <Button
            href="/projects"
            variant={"outline"}
            class="mt-3 mb-10 w-36 h-14 border-white/80 border-solid border-2 bg-transparent hover:bg-muted"
          >
            More Projects
          </Button>
      </div>
    </section>
    <section class="w-full min-h-[80vh] bg-white m-auto py-[10%] bg-opacity-90 flex justify-center items-center">
      <div class="h-[80vh] relative w-11/12">
        <picture>
          <source
            srcset={headerImages.HomePageImage2}
            media="(min-width: 768px)"
          />
          <img
            src={headerImages.HomePageImage2Mobile}
            alt="image"
            class="object-cover w-full h-full relative m-auto"
          />
        </picture>
      </div>
    </section>
  </div>
  </main>
</Layout>
